<h1>Create Article</h1>

<% if @article.errors.any? %>
<h2>Error!</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></ul>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>
